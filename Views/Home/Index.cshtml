@model IEnumerable<LanSiDai.Models.Questions>

@{
    ViewBag.Title = "Index";
 }
<div class="lansidai-contianer">
    @foreach (var item in Model)
    {
        <div class="question-container">
            <div class="container paragraph-3-lines" style="padding-top:5px" >
                <p>@item.Description</p>
                <p>Creat Person</p>
                <input class="hidden-value-questionId" type="hidden" value="@item.Id">
                <p>@item.CreatTime</p>
            </div>
        </div>
    }
</div>
<div class="bottom-tab-bar">
    <div class="col-xs-4">
        @Html.ActionLink("热门","AskQuestion","Home")
    </div>
    <div class="col-xs-4">
        @Html.ActionLink("我要提问", "AskQuestion", "Home")
    </div>
    <div class="col-xs-4">
        @Html.ActionLink("我的问题", "AskQuestion", "Home")
    </div>
</div>
<style>
    .paragraph-3-lines p{
        max-height: 60px;
        line-height: 20px; /* Height / no. of lines to display */
        letter-spacing:1px;
        overflow: hidden;
    } 
    .question-container p {
        font-size: 15px;
    }
    .lansidai-contianer {
        background-color: #ececec;
    }

    .question-container {
        background-color: white;
        max-height: 200px;
        position: relative;
        top: 3px;
        margin-top: 10px;
        overflow:hidden;
    }
    .bottom-tab-bar {
        height:30px;
        width:100%;
        position:fixed;
        bottom:0;
        background-color:white;
        z-index:1000;
    }
</style>


<script src="~/Scripts/Homejs/Indexjs.js"></script>
<script>
    main({
        selector: {
            questionContainer: ".question-container",
            questionId:".hidden-value-questionId",
        },
        url: {
            questionUrl : "@Url.Action("QuestionDetail","Home")",
        }
    });
</script>